#!/bin/sh

PYTHON_VERSION=$(${PYTHON} -c 'import sys; print(sys.version[:3])')

${PYTHON} configure.py \
    --no-stubs \
    --bindir=/app/bin \
    --destdir=/app/lib/python${PYTHON_VERSION}/site-packages \
    --incdir=/app/include \
    --pyidir=/app/lib/python${PYTHON_VERSION}/site-packages \
    --sipdir=/app/share/sip \
    --sip-module=PyQt5.sip
