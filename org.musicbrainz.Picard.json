{
    "id": "org.musicbrainz.Picard",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-24.08",
    "sdk": "org.kde.Sdk",
    "command": "picard",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--share=network",
        "--device=all",
        "--filesystem=home",
        "--filesystem=xdg-music",
        "--filesystem=/tmp"
    ],
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "directory": "lib/ffmpeg",
            "version": "24.08",
            "add-ld-path": "."
        }
    },
    "cleanup-commands": [
        "mkdir -p /app/lib/ffmpeg"
    ],
    "build-options": {
        "env": {
            "PIP_DISABLE_PIP_VERSION_CHECK": "1"
        }
    },
    "modules": [
        "files/python3-build-deps.json",
        {
            "name": "pyqt-sip",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --no-build-isolation --verbose --prefix=${FLATPAK_DEST} ."
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://files.pythonhosted.org/packages/ea/08/88a20c862f40b5c178c517cdc7e93767967dec5ac1b994e226d517991c9b/pyqt5_sip-12.17.1.tar.gz",
                    "sha256": "0eab72bcb628f1926bf5b9ac51259d4fa18e8b2a81d199071135458f7d087ea8",
                    "x-checker-data": {
                        "type": "pypi",
                        "name": "pyqt5-sip"
                    }
                }
            ]
        },
        {
            "name": "pyqt-builder",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --no-build-isolation --verbose --prefix=${FLATPAK_DEST} ."
            ],
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://files.pythonhosted.org/packages/f7/25/e8ad047efd873e07139f703b681017fa0c3326540cc4f42b02e1a237a3b0/pyqt_builder-1.19.0.tar.gz",
                    "sha256": "79540e001c476bc050180db00fffcb1e9fa74544d95c148e48ad6117e49d6ea2",
                    "x-checker-data": {
                        "type": "pypi",
                        "name": "pyqt-builder"
                    }
                }
            ]
        },
        {
            "name": "pyqt",
            "buildsystem": "simple",
            "build-commands": [
                ". ${FLATPAK_BUILDER_BUILDDIR}/build"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://files.pythonhosted.org/packages/0e/07/c9ed0bd428df6f87183fca565a79fee19fa7c88c7f00a7f011ab4379e77a/PyQt5-5.15.11.tar.gz",
                    "sha256": "fda45743ebb4a27b4b1a51c6d8ef455c4c1b5d610c90d2934c7802b5c1557c52",
                    "x-checker-data": {
                        "type": "pypi",
                        "name": "pyqt5"
                    }
                },
                {
                    "type": "file",
                    "path": "pyqt-build",
                    "dest-filename": "build"
                },
                {
                    "type": "shell",
                    "commands": [
                        "echo '[tool.sip.bindings.QtGui]' >> pyproject.toml",
                        "echo 'disabled-features = [\"PyQt_Desktop_OpenGL\"]' >> pyproject.toml"
                    ],
                    "only-arches": [
                        "aarch64"
                    ]
                }
            ],
            "cleanup": [
                "/bin"
            ]
        },
        {
            "name": "chromaprint",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE:STRING=Release",
                "-DBUILD_TOOLS:BOOL=ON"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/acoustid/chromaprint.git",
                    "commit": "aa67c95b9e486884a6d3ee8b0c91207d8c2b0551"
                }
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ]
        },
        {
            "name": "libdiscid",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/metabrainz/libdiscid/archive/v0.6.5.tar.gz",
                    "sha256": "1ecc4280b88d6a65c7fcde695f991ac28e3b54ce41d83ab3fffddfb3d5764a11",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1592,
                        "stable-only": true,
                        "url-template": "https://github.com/metabrainz/libdiscid/archive/v$version.tar.gz"
                    }
                }
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ]
        },
        {
            "name": "rsgain",
            "buildsystem": "cmake-ninja",
            "build-options": {
                "ldflags": "-lpthread",
                "cxxflags": "-lpthread"
            },
            "cleanup": [
                "/share"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/complexlogic/rsgain/releases/download/v3.6/rsgain-3.6-source.tar.xz",
                    "sha256": "26d46f1240a83366e82cbc9121a467fc1dcc977c7adfb4e15c99ead6b3d07ec8",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/complexlogic/rsgain/releases/latest",
                        "version-query": ".tag_name",
                        "url-query": ".assets[] | select(.name==\"rsgain-\" + $version + \"-source.taz.xz\") | .browser_download_url"
                    }
                }
            ],
            "modules": [
                {
                    "name": "libebur128",
                    "buildsystem": "cmake-ninja",
                    "cleanup": [
                        "/include",
                        "/lib/pkgconfig"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/jiixyj/libebur128/archive/refs/tags/v1.2.6.tar.gz",
                            "sha256": "baa7fc293a3d4651e244d8022ad03ab797ca3c2ad8442c43199afe8059faa613"
                        }
                    ]
                },
                {
                    "name": "inih",
                    "buildsystem": "meson",
                    "cleanup": [
                        "/include",
                        "/lib/pkgconfig"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/benhoyt/inih/archive/refs/tags/r62.tar.gz",
                            "sha256": "9c15fa751bb8093d042dae1b9f125eb45198c32c6704cd5481ccde460d4f8151",
                            "x-checker-data": {
                                "type": "anitya",
                                "project-id": 11600,
                                "stable-only": true,
                                "url-template": "https://github.com/benhoyt/inih/archive/refs/tags/r$version.tar.gz"
                            }
                        }
                    ]
                },
                {
                    "name": "fmt",
                    "buildsystem": "cmake-ninja",
                    "config-opts": [
                        "-DFMT_TEST=off",
                        "-DFMT_DOC=off"
                    ],
                    "cleanup": [
                        "*"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/fmtlib/fmt/releases/download/12.1.0/fmt-12.1.0.zip",
                            "sha256": "695fd197fa5aff8fc67b5f2bbc110490a875cdf7a41686ac8512fb480fa8ada7",
                            "x-checker-data": {
                                "type": "json",
                                "url": "https://api.github.com/repos/fmtlib/fmt/releases/latest",
                                "version-query": ".tag_name",
                                "url-query": ".assets[] | select(.name==\"fmt-\" + $version + \".zip\") | .browser_download_url"
                            }
                        }
                    ]
                }
            ]
        },
        "files/python3-deps.json",
        "files/python3-aubio.json",
        {
            "name": "picard",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --config-settings=\"--disable-autoupdate=1\" --compile --no-build-isolation --verbose --prefix=${FLATPAK_DEST} ."
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/metabrainz/picard.git",
                    "tag": "release-2.13.3",
                    "commit": "8a062c9a7c103e1abed485e62f75bdc332753311",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^release-([\\d.]+)$",
                        "is-main-source": true
                    }
                }
            ]
        }
    ]
}
