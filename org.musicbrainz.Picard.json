{
    "id": "org.musicbrainz.Picard",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-22.08",
    "sdk": "org.kde.Sdk",
    "command": "picard",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--share=network",
        "--device=all",
        "--filesystem=home",
        "--filesystem=xdg-music",
        "--filesystem=/tmp"
    ],
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "directory": "lib/ffmpeg",
            "version": "22.08",
            "add-ld-path": "."
        }
    },
    "cleanup-commands": [
        "mkdir -p /app/lib/ffmpeg"
    ],
    "build-options": {
        "env": {
            "PIP_DISABLE_PIP_VERSION_CHECK": "1"
        }
    },
    "modules": [
        "sources/python3-sip.json",
        {
            "name": "pyqt-sip",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --no-build-isolation --verbose --prefix=${FLATPAK_DEST} ."
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://files.pythonhosted.org/packages/39/5f/fd9384fdcb9cd0388088899c110838007f49f5da1dd1ef6749bfb728a5da/PyQt5_sip-12.11.0.tar.gz",
                    "sha256": "b4710fd85b57edef716cc55fae45bfd5bfac6fc7ba91036f1dcc3f331ca0eb39",
                    "x-checker-data": {
                        "type": "pypi",
                        "name": "pyqt5-sip"
                    }
                }
            ]
        },
        {
            "name": "pyqt-builder",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --no-build-isolation --verbose --prefix=${FLATPAK_DEST} ."
            ],
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://files.pythonhosted.org/packages/3e/ed/fa5ffe4a72903747cdd5860a46483795edc0b70562015dde42724e9ce00f/PyQt-builder-1.14.0.tar.gz",
                    "sha256": "6755931c6d2f8940553e0334d10c933ce5cc18b64425e94fda1accf4ff774f59",
                    "x-checker-data": {
                        "type": "pypi",
                        "name": "pyqt-builder"
                    }
                }
            ]
        },
        {
            "name": "pyqt",
            "buildsystem": "simple",
            "build-commands": [
                ". ${FLATPAK_BUILDER_BUILDDIR}/build"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://files.pythonhosted.org/packages/e1/57/2023316578646e1adab903caab714708422f83a57f97eb34a5d13510f4e1/PyQt5-5.15.7.tar.gz",
                    "sha256": "755121a52b3a08cb07275c10ebb96576d36e320e572591db16cfdbc558101594",
                    "x-checker-data": {
                        "type": "pypi",
                        "name": "pyqt5"
                    }
                },
                {
                    "type": "file",
                    "path": "pyqt-build",
                    "dest-filename": "build"
                },
                {
                    "type": "shell",
                    "commands": [
                        "echo '[tool.sip.bindings.QtGui]' >> pyproject.toml",
                        "echo 'disabled-features = [\"PyQt_Desktop_OpenGL\"]' >> pyproject.toml"
                    ],
                    "only-arches": [
                        "aarch64"
                    ]
                }
            ],
            "cleanup": [
                "/bin"
            ]
        },
        {
            "name": "chromaprint",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE:STRING=Release",
                "-DBUILD_TOOLS:BOOL=ON"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/acoustid/chromaprint/releases/download/v1.5.1/chromaprint-1.5.1.tar.gz",
                    "sha256": "a1aad8fa3b8b18b78d3755b3767faff9abb67242e01b478ec9a64e190f335e1c",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 286,
                        "stable-only": true,
                        "url-template": "https://github.com/acoustid/chromaprint/releases/download/v$version/chromaprint-$version.tar.gz"
                    }
                },
                {
                    "type": "patch",
                    "path": "patches/chromaprint/support-ffmpeg5.patch"
                }
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ]
        },
        {
            "name": "libdiscid",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/metabrainz/libdiscid/archive/v0.6.2.tar.gz",
                    "sha256": "a9b73b030603ce707941a3aab4f46649fa5029025e7e2bfbbe0c3c93a86d7b20",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1592,
                        "stable-only": true,
                        "url-template": "https://github.com/metabrainz/libdiscid/archive/v$version.tar.gz"
                    }
                }
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ]
        },
        "sources/python3-discid.json",
        "sources/python3-python-dateutil.json",
        "sources/python3-fasteners.json",
        "sources/python3-PyJWT.json",
        "sources/python3-PyYAML.json",
        "sources/python3-mutagen.json",
        "sources/python3-numpy.json",
        "sources/python3-aubio.json",
        {
            "name": "picard",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --no-build-isolation --verbose --prefix=${FLATPAK_DEST} --install-option='--disable-autoupdate' ."
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/metabrainz/picard.git",
                    "tag": "release-2.8.3",
                    "commit": "0862755af5c285cf7dd89e14c140d40a4a5e17f9",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^release-([\\d.]+)$",
                        "is-main-source": true
                    }
                }
            ]
        }
    ]
}
