{
    "id": "org.musicbrainz.Picard",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "command": "picard",
    "rename-desktop-file": "picard.desktop",
    "rename-icon": "picard",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--share=network",
        "--filesystem=home",
        "--filesystem=xdg-music",
        "--talk-name=org.gnome.GConf"
    ],
    "modules": [
        "shared-modules/qt4/qt4-4.8.7-minimal.json",
        {
            "name": "sip",
            "sources": [
                {
                    "type": "archive",
                    /* Sourceforge URLs fail intermitently, get the tarballs from Fedora, check the upstream hashes */
                    "url": "https://src.fedoraproject.org/repo/pkgs/rpms/sip/sip-4.19.8.tar.gz/sha512/9c0a9722a9a9dd23e2eabe751d622cdd31b376b7987b2c991f5ef4a8d11853c5c6e9f1c24a0d2d864d3990e2a45c2a159ca8511efd4a7e156a14937ef3c680f7/sip-4.19.8.tar.gz",
                    "sha256": "7eaf7a2ea7d4d38a56dd6d2506574464bddf7cf284c960801679942377c297bc"
                },
                {
                    "type": "file",
                    "path": "sip-configure",
                    "dest-filename": "configure"
                }
            ],
            "cleanup": [
                "/bin",
                "/include"
            ]
        },
        {
            "name": "pyqt",
            "sources": [
                {
                    "type": "archive",
                    /* Sourceforge URLs fail intermitently, get the tarballs from Fedora, check the upstream hashes */
                    "url": "https://src.fedoraproject.org/repo/pkgs/rpms/PyQt4/PyQt4_gpl_x11-4.12.1.tar.gz/sha512/0651816ed5a371c24827e182eac5b2a2afe67928d95a09f63bd8158117aacd3e835b1efa06d4fc0c147a28038613a5bc088bd736a1348de68199da7952299af1/PyQt4_gpl_x11-4.12.1.tar.gz",
                    "sha256": "45d724461ae58b019b9be95076ca07e212eb73084aec9125bb254825c3a05383"
                },
                {
                    "type": "file",
                    "path": "pyqt-configure",
                    "dest-filename": "configure"
                }
            ],
            "cleanup": [
                "/bin"
            ]
        },
        {
            "name": "ffmpeg",
            "config-opts": [
                "--enable-shared",
                "--disable-static",
                "--disable-doc",
                "--enable-gpl",
                "--enable-version3",
                "--disable-nonfree",
                "--enable-optimizations",
                "--enable-pthreads",

                "--disable-bzlib",
                "--disable-libgsm",
                "--enable-libvorbis",
                "--enable-zlib",
                "--disable-libxcb",
                "--disable-lzma",

                "--disable-programs",
                "--disable-network",

                "--disable-protocols",
                "--enable-protocol=file",

                "--disable-devices",

                "--disable-muxers",

                "--disable-demuxers",
                "--enable-demuxer=flac",
                "--enable-demuxer=mp3",
                "--enable-demuxer=ogg",

                "--disable-parsers",
                "--enable-parser=flac",
                "--enable-parser=vorbis",

                "--disable-encoders",

                "--disable-decoders",
                "--enable-decoder=flac",
                "--enable-decoder=libvorbis",
                "--enable-decoder=mp3"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ffmpeg.org/releases/ffmpeg-3.4.2.tar.xz",
                    "sha256": "2b92e9578ef8b3e49eeab229e69305f5f4cbc1fdaa22e927fc7fca18acccd740"
                }
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ]
        },
        {
            "name": "chromaprint",
            "cmake": true,
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE:STRING=Release",
                "-DBUILD_TOOLS:BOOL=ON"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/acoustid/chromaprint/releases/download/v1.4.3/chromaprint-1.4.3.tar.gz",
                    "sha256": "ea18608b76fb88e0203b7d3e1833fb125ce9bb61efe22c6e169a50c52c457f82"
                }
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ]
        },
        {
            "name": "mutagen",
            "buildsystem": "simple",
            "build-commands": [
                "python2 setup.py install --prefix=/app"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://files.pythonhosted.org/packages/source/m/mutagen/mutagen-1.40.0.tar.gz",
                    "sha256": "b2a2c2ce87863af12ed7896f341419cd051a3c72c3c6733db9e83060dcadee5e"
                }
            ],
            "cleanup": [
                "/bin",
                "/share/man"
            ]
        },
        {
            "name": "picard",
            "buildsystem": "simple",
            "build-commands": [
                "python2 setup.py install --prefix=/app"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://ftp.musicbrainz.org/pub/musicbrainz/picard/picard-1.4.2.tar.gz", /* No HTTPS */
                    "sha256": "f0adee3877bbd66c827a43b57dd2233037b99f6ebfdc1700b26cb9d400992234"
                },
                {
                    "type": "file",
                    "path": "org.musicbrainz.Picard.appdata.xml"
                }
            ],
            "post-install": [
                "mkdir -p /app/share/appdata",
                "install -m644 -p org.musicbrainz.Picard.appdata.xml /app/share/appdata/"
            ]
        }
    ]
}
