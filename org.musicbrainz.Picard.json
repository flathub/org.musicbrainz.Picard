{
    "id": "org.musicbrainz.Picard",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-23.08",
    "sdk": "org.kde.Sdk",
    "command": "picard",
    "base": "com.riverbankcomputing.PyQt.BaseApp",
    "base-version": "5.15-23.08",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--share=network",
        "--device=all",
        "--filesystem=home",
        "--filesystem=xdg-music",
        "--filesystem=/tmp"
    ],
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "directory": "lib/ffmpeg",
            "version": "23.08",
            "add-ld-path": "."
        }
    },
    "cleanup-commands": [
        "mkdir -p /app/lib/ffmpeg",
        "/app/cleanup-BaseApp.sh"
    ],
    "build-options": {
        "env": {
            "PIP_DISABLE_PIP_VERSION_CHECK": "1",
            "BASEAPP_REMOVE_WEBENGINE":"1"
        }
    },
    "modules": [
        {
            "name": "PyQtApp"
        },
        {
            "name": "chromaprint",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE:STRING=Release",
                "-DBUILD_TOOLS:BOOL=ON"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/acoustid/chromaprint.git",
                    "commit": "aa67c95b9e486884a6d3ee8b0c91207d8c2b0551"
                }
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ]
        },
        {
            "name": "libdiscid",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/metabrainz/libdiscid/archive/v0.6.4.tar.gz",
                    "sha256": "c581baeabaf6e410398005645d66acaaa41ff2cab272c267a2d6839e41486ebb",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1592,
                        "stable-only": true,
                        "url-template": "https://github.com/metabrainz/libdiscid/archive/v$version.tar.gz"
                    }
                }
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ]
        },
        {
            "name": "rsgain",
            "buildsystem": "cmake-ninja",
            "build-options": {
                "ldflags": "-lpthread",
                "cxxflags": "-lpthread"
            },
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/complexlogic/rsgain/releases/download/v3.1/rsgain-3.1-source.tar.xz",
                    "sha256": "c1ab2c2162c1046786254090f939d60da87994efad5715dde68aa5247f33eaa3"
                }
            ],
            "modules": [
                {
                    "name": "libebur128",
                    "buildsystem": "cmake-ninja",
                    "cleanup": [
                        "/include",
                        "/lib/pkgconfig"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/jiixyj/libebur128/archive/refs/tags/v1.2.6.tar.gz",
                            "sha256": "baa7fc293a3d4651e244d8022ad03ab797ca3c2ad8442c43199afe8059faa613"
                        }
                    ]
                },
                {
                    "name": "inih",
                    "buildsystem": "meson",
                    "cleanup": [
                        "/include",
                        "/lib/pkgconfig"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/benhoyt/inih/archive/refs/tags/r58.tar.gz",
                            "sha256": "e79216260d5dffe809bda840be48ab0eec7737b2bb9f02d2275c1b46344ea7b7"
                        }
                    ]
                },
                {
                    "name": "fmt",
                    "buildsystem": "cmake-ninja",
                    "config-opts": [
                        "-DFMT_TEST=off",
                        "-DFMT_DOC=off"
                    ],
                    "cleanup": [
                        "*"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/fmtlib/fmt/releases/download/11.1.2/fmt-11.1.2.zip",
                            "sha256": "ef54df1d4ba28519e31bf179f6a4fb5851d684c328ca051ce5da1b52bf8b1641"
                        }
                    ]
                }
            ]
        },
        "files/python3-deps.json",
        {
            "name": "python3-aubio",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --verbose --prefix=${FLATPAK_DEST} --no-build-isolation ."
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://files.pythonhosted.org/packages/cd/80/302d89240603e5347c7f8026c8b02c59f8dfaec66c91a743d82de7c86006/aubio-0.4.9.tar.gz",
                    "sha256": "df1244f6c4cf5bea382c8c2d35aa43bc31f4cf631fe325ae3992c219546a4202",
                    "x-checker-data": {
                        "type": "pypi",
                        "name": "aubio"
                    }
                },
                {
                    "type": "patch",
                    "path": "patches/aubio/support-ffmpeg5.patch"
                }
            ],
            "cleanup": [
                "/bin",
                "/share/man/man1"
            ]
        },
        {
            "name": "picard",
            "buildsystem": "simple",
            "build-commands": [
                "python3 setup.py install --disable-autoupdate --prefix=${FLATPAK_DEST}"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/metabrainz/picard.git",
                    "tag": "release-2.12.3",
                    "commit": "2c1c30e6ccba886270cb49aed6d0329e114763da",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^release-([\\d.]+)$",
                        "is-main-source": true
                    }
                }
            ]
        }
    ]
}
