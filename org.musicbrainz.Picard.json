{
    "id": "org.musicbrainz.Picard",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.9",
    "sdk": "org.kde.Sdk",
    "command": "picard",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--share=network",
        "--device=all",
        "--filesystem=home",
        "--filesystem=xdg-music",
        "--filesystem=/tmp"
    ],
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "directory": "lib/ffmpeg",
            "version": "24.08",
            "add-ld-path": "."
        }
    },
    "cleanup-commands": [
        "mkdir -p /app/lib/ffmpeg"
    ],
    "build-options": {
        "env": {
            "PIP_DISABLE_PIP_VERSION_CHECK": "1"
        }
    },
    "modules": [
        "files/python3-build-deps.json",
        {
            "name": "pyqt-sip",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --no-build-isolation --verbose --prefix=${FLATPAK_DEST} ."
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://files.pythonhosted.org/packages/90/18/0405c54acba0c8e276dd6f0601890e6e735198218d031a6646104870fe22/pyqt6_sip-13.10.0.tar.gz",
                    "sha256": "d6daa95a0bd315d9ec523b549e0ce97455f61ded65d5eafecd83ed2aa4ae5350",
                    "x-checker-data": {
                        "type": "pypi",
                        "name": "PyQt6-sip"
                    }
                }
            ]
        },
        {
            "name": "pyqt-builder",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --no-build-isolation --verbose --prefix=${FLATPAK_DEST} ."
            ],
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://files.pythonhosted.org/packages/0b/0a/e7684c054c3b85999354bb3be7ccbd6e6d9b751940cec8ecff5e7a8ea9f7/pyqt_builder-1.18.1.tar.gz",
                    "sha256": "3f7a3a2715947a293a97530a76fd59f1309fcb8e57a5830f45c79fe7249b3998",
                    "x-checker-data": {
                        "type": "pypi",
                        "name": "pyqt-builder"
                    }
                }
            ]
        },
        {
            "name": "pyqt",
            "buildsystem": "simple",
            "build-commands": [
                ". ${FLATPAK_BUILDER_BUILDDIR}/build"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://files.pythonhosted.org/packages/32/de/102e8e66149085acf38bbf01df572a2cd53259bcd99b7d8ecef0d6b36172/pyqt6-6.9.0.tar.gz",
                    "sha256": "6a8ff8e3cd18311bb7d937f7d741e787040ae7ff47ce751c28a94c5cddc1b4e6",
                    "x-checker-data": {
                        "type": "pypi",
                        "name": "PyQt6"
                    }
                },
                {
                    "type": "file",
                    "path": "pyqt-build",
                    "dest-filename": "build"
                },
                {
                    "type": "shell",
                    "commands": [
                        "echo '[tool.sip.bindings.QtGui]' >> pyproject.toml",
                        "echo 'disabled-features = [\"PyQt_Desktop_OpenGL\"]' >> pyproject.toml"
                    ],
                    "only-arches": [
                        "aarch64"
                    ]
                }
            ],
            "cleanup": [
                "/bin"
            ]
        },
        {
            "name": "chromaprint",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE:STRING=Release",
                "-DBUILD_TOOLS:BOOL=ON"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/acoustid/chromaprint.git",
                    "commit": "aa67c95b9e486884a6d3ee8b0c91207d8c2b0551"
                }
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ]
        },
        {
            "name": "libdiscid",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/metabrainz/libdiscid/archive/v0.6.4.tar.gz",
                    "sha256": "c581baeabaf6e410398005645d66acaaa41ff2cab272c267a2d6839e41486ebb",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1592,
                        "stable-only": true,
                        "url-template": "https://github.com/metabrainz/libdiscid/archive/v$version.tar.gz"
                    }
                }
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ]
        },
        {
            "name": "rsgain",
            "buildsystem": "cmake-ninja",
            "build-options": {
                "ldflags": "-lpthread",
                "cxxflags": "-lpthread"
            },
            "cleanup": [
                "/share"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/complexlogic/rsgain/releases/download/v3.6/rsgain-3.6-source.tar.xz",
                    "sha256": "26d46f1240a83366e82cbc9121a467fc1dcc977c7adfb4e15c99ead6b3d07ec8",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/complexlogic/rsgain/releases/latest",
                        "version-query": ".tag_name",
                        "url-query": ".assets[] | select(.name==\"rsgain-\" + $version + \"-source.taz.xz\") | .browser_download_url"
                    }
                }
            ],
            "modules": [
                {
                    "name": "libebur128",
                    "buildsystem": "cmake-ninja",
                    "cleanup": [
                        "/include",
                        "/lib/pkgconfig"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/jiixyj/libebur128/archive/refs/tags/v1.2.6.tar.gz",
                            "sha256": "baa7fc293a3d4651e244d8022ad03ab797ca3c2ad8442c43199afe8059faa613"
                        }
                    ]
                },
                {
                    "name": "inih",
                    "buildsystem": "meson",
                    "cleanup": [
                        "/include",
                        "/lib/pkgconfig"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/benhoyt/inih/archive/refs/tags/r60.tar.gz",
                            "sha256": "706aa05c888b53bd170e5d8aa8f8a9d9ccf5449dfed262d5103d1f292af26774",
                            "x-checker-data": {
                                "type": "anitya",
                                "project-id": 11600,
                                "stable-only": true,
                                "url-template": "https://github.com/benhoyt/inih/archive/refs/tags/r$version.tar.gz"
                            }
                        }
                    ]
                },
                {
                    "name": "fmt",
                    "buildsystem": "cmake-ninja",
                    "config-opts": [
                        "-DFMT_TEST=off",
                        "-DFMT_DOC=off"
                    ],
                    "cleanup": [
                        "*"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/fmtlib/fmt/releases/download/11.1.4/fmt-11.1.4.zip",
                            "sha256": "49b039601196e1a765e81c5c9a05a61ed3d33f23b3961323d7322e4fe213d3e6",
                            "x-checker-data": {
                                "type": "json",
                                "url": "https://api.github.com/repos/fmtlib/fmt/releases/latest",
                                "version-query": ".tag_name",
                                "url-query": ".assets[] | select(.name==\"fmt-\" + $version + \".zip\") | .browser_download_url"
                            }
                        }
                    ]
                }
            ]
        },
        "files/python3-deps.json",
        "files/python3-aubio.json",
        {
            "name": "picard",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --config-settings=\"--disable-autoupdate=1\" --compile --no-build-isolation --verbose --prefix=${FLATPAK_DEST} ."
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/metabrainz/picard.git",
                    "commit": "1a335c98be0443020d675a4f817da60d75861e49",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^release-([\\d.]+)$",
                        "is-main-source": true
                    }
                }
            ]
        }
    ]
}
